<section class="container-md d-none" id="gameZone">
    <div class="alert alert-info py-2 rounded-0" role="alert">
        <div class="row align-items-center">
            <div class="col-2">
                <p class="lead fw-bold mb-0" id="clock">0</p>
            </div>
            <div class="col-10 col-md-8 text-center" id="wordDiv"></div>
        </div>
    </div>
    <div class="row justify-content-center mx-0">
        <div class="col-3 col-lg-2 h-100 players"></div>
        <div class="col-9 col-lg-7 h-100 d-flex flex-column pe-0 px-lg-3">
            <div id="sketchpad" class="text-end"></div>
            <%- include('tools') %>
        </div>
        <div class="col-lg-3 h-100 bg-white p-0 mt-3 mt-lg-0">
            <div class="messages"></div>
            <form id="sendMessage" class="m-2">
                <input class="form-control" type="text" placeholder="Type your guess here...">
                <div class="position-relative">
                    <ul class="list-group mt-1" id="suggestions"></ul>
                </div>
            </form>
        </div>
    </div>
</section>
